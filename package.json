{
  "name": "freezer-stock",
  "version": "0.1.0",
  "description": "Freezer Stock is a small tool that notifies you when a product in your freezer is about to expire.",
  "author": {
    "name": "Guillermina Avigliano"
  },
  "private": true,
  "scripts": {
    "dev": "react-scripts start",
    "build": "yarn lint:fix && lint-styles:fix && yarn prettier && react-scripts build",
    "serve": "serve -s build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "lint-styles": "npx stylelint '**/*.scss'",
    "lint-styles:fix": "npx stylelint '**/*.scss' --fix",
    "prepare": "husky install",
    "prettier": "npx prettier --write ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.1",
    "react-scripts": "^5.0.1",
    "sass": "^1.53.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.43.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "zod": "^3.17.3"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint:fix",
      "yarn lint-styles:fix",
      "yarn prettier --ignore-unknown"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "packageManager": "yarn@3.2.1",
  "msw": {
    "workerDirectory": "public"
  }
}